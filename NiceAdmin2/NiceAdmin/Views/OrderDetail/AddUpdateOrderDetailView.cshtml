@model OrderDetailModel
<div class="container mt-3 mb-3">
    <h2>Order Detail Form</h2>
    <form method="post" asp-action="AddUpdateOrderDetailView" asp-controller="OrderDetail">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          @*   <label for="orderDetailID">Order Detail ID</label>
            <input type="number" class="form-control mb-3" id="orderDetailID" name="orderDetailID"> *@
            <input type="hidden" asp-for="OrderDetailID">
        </div>
        <div class="form-group">
            <label for="orderID">Order ID</label>
            <select class="form-control" asp-for="OrderID">
                <option value="">Select Order</option>
                @foreach (var order in ViewBag.OrderList)
                {
                    <option value="@order.OrderID">@order.OrderID</option>
                }
            </select>
            <span asp-validation-for="OrderID" class="text-danger"></span>
            @* <label for="orderID">Order ID</label>
            <select class="form-control" asp-for="OrderID">
                <option value="">Select Order</option>
                @foreach (var order in ViewBag.OrderList)
                {
                    <option value="@order.OrderID">@order.OrderID</option>
                }
            </select>
            <span asp-validation-for="OrderID" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label for="productID">Product ID</label>
            <select class="form-control" asp-for="ProductID">
                <option value="">Select Product</option>
                @foreach (var product in ViewBag.ProductList)
                {
                    <option value="@product.ProductID">@product.ProductName</option>
                }
            </select>
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input class="form-control mb-3" asp-for="Quantity" id="quantity" >
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="amount">Amount</label>
            <input step="0.01" asp-for="Amount" class="form-control mb-3" id="amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="totalAmount">Total Amount</label>
            <input step="0.01" asp-for="TotalAmount" class="form-control mb-3" id="totalAmount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="userID">User ID</label>
            <select class="form-control" asp-for="UserID">
                <option value="">Select User</option>
                @foreach (var user in ViewBag.UserList)
                {
                    <option value="@user.UserID">@user.UserName</option>
                }
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success mt-3 me-3">Submit</button>
        <a asp-action="OrderDetailView" asp-controller="OrderDetail" class="btn btn-primary mt-3">Back To List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}